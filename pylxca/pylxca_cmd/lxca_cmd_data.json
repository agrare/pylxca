{
	"connect": {
		"description": "connect to LXCA",
		"cmd_args": [
			[{
					"args": "-l,--url",
					"opt_dict": {
						"help": "Url of lxca"
					}
				}
			],
			[{
					"args": "-u,--user",
					"opt_dict": {
						"help": "user of lxca"
					}
				}
			],
			[{
					"args": "-p,--pw",
					"opt_dict": {
						"help": "password of lxca"
					}
				}
			],
			[{
					"args": "--noverify",
					"opt_dict": {
						"help": "Verify certificate",
                        "const": true,
                        "nargs": "?",
                        "default": true
                    }
				}
			]
		]
	},

  	"disconnect": {
		"description": "disconnect session from LXCA",
		"cmd_args": [
			[
				{
					"args": "-c,--con",
					"opt_dict": {
						"help": "connection object"
					}
				}
			]
		]
	},

	"nodes":
    {
		"description": "get nodes from LXCA",
		"cmd_args":	[
		[{
				"args": "-v,--view",
				"opt_dict": {
					"help": "view for interactive shell"
				}
			}
		],

		[{
				"args": "-s,--status",
				"opt_dict": {
					"help": "list nodes with status",
					"choices": ["managed", "unmanaged"]
				}
			}
		]
        ],
		"mutually_exclusive_args":	[

		[{
				"args": "-u,--uuid",
				"opt_dict": {
					"help": "uuid of device"
				}
			}
		],
		[{
				"args": "-c,--chassis",
				"opt_dict": {
					"help": "uuid of chassis"
				}
			}
		]
	]

    },

      "chassis":
      {
		"description": "get chassis from LXCA",
		"cmd_args":[
		[{
				"args": "-v,--view",
				"opt_dict": {
					"help": "view for interactive shell"
				}
			}
		],

		[{
				"args": "-u,--uuid",
				"opt_dict": {
					"help": "uuid of device"
				}
			}
		],
		[{
				"args": "-s,--status",
				"opt_dict": {
					"help": "list nodes with status",
					"choices": ["managed", "unmanaged"]
				}
			}
		]
	]},

	"cmms": {
      "description": "get cmms from LXCA",
      "cmd_args": [
        [
          {
            "args": "-u,--uuid",
            "opt_dict": {
              "help": "uuid of device"
            }
          }
        ],
        [
          {
            "args": "-c,--chassis",
            "opt_dict": {
              "help": "uuid of chassis"
            }
          }
        ]
      ]
    },

	"tasks": {
      "description": "get tasks detail from LXCA",
      "cmd_args": [
      [{
				"args": "-v,--view",
				"opt_dict": {
					"help": "view for interactive shell"
				}
			}
		],

        [
          {
            "args": "-j,--jobUID",
            "opt_dict": {
              "help": "task Id of task"
            }
          }
        ],
        [
          {
            "args": "-c,--children",
            "opt_dict": {
              "help": "include children details",
			  "default" : false
            }
          }
        ],
        [
          {
            "args": "-a,--action",
            "opt_dict": {
              "help": "action to perform",
			  "choices": ["cancel", "update", "delete"]
            }
          }
        ]
      ]
    }
}

