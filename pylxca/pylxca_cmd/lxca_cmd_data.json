{
	"connect": {
		"description": "connect to LXCA",
        "additional_detail": ["it could be multiline",
                              "additional line1",
                              "additional line2 "] ,
		"cmd_args": [
			[{
					"args": "-l,--url",
					"opt_dict": {
						"help": "Url of lxca",
                        "required": true
					}
				}
			],
			[{
					"args": "-u,--user",
					"opt_dict": {
						"help": "user of lxca",
                        "required": true
					}
				}
			],
			[{
					"args": "-p,--pw",
					"opt_dict": {
						"help": "password of lxca"
					}
				}
			],
			[{
					"args": "--noverify",
					"opt_dict": {
						"help": "Verify certificate",
                        "const": false,
                        "nargs": "?",
                        "default": false
                    }
				}
			]
		]
	},

  	"disconnect": {
		"description": "disconnect session from LXCA",
		"cmd_args": [
			[
				{
					"args": "-c,--con",
					"opt_dict": {
						"help": "connection object"
					}
				}
			]
		]
	},

	"nodes": {
      "description": "get nodes from LXCA",
      "cmd_args": [
        [
          {
            "args": "-v,--view",
            "opt_dict": {
              "help": "view for interactive shell"
            }
          }
        ],
        [
          {
            "args": "-s,--status",
            "opt_dict": {
              "help": "list nodes with status",
              "choices": [
                "managed",
                "unmanaged"
              ]
            }
          }
        ]
      ],
      "mutually_exclusive_args": [
        [
          {
            "args": "-u,--uuid",
            "opt_dict": {
              "help": "uuid of device"
            }
          }
        ],
        [
          {
            "args": "-c,--chassis",
            "opt_dict": {
              "help": "uuid of chassis"
            }
          }
        ]
      ]
    },

      "chassis":
      {
		"description": "get chassis from LXCA",
		"cmd_args":[
		[{
				"args": "-v,--view",
				"opt_dict": {
					"help": "view for interactive shell"
				}
			}
		],

		[{
				"args": "-u,--uuid",
				"opt_dict": {
					"help": "uuid of device"
				}
			}
		],
		[{
				"args": "-s,--status",
				"opt_dict": {
					"help": "list nodes with status",
					"choices": ["managed", "unmanaged"]
				}
			}
		]
	]},

	"cmms": {
      "description": "get cmms from LXCA",
      "cmd_args": [
        [
          {
            "args": "-u,--uuid",
            "opt_dict": {
              "help": "uuid of device"
            }
          }
        ],
        [
          {
            "args": "-c,--chassis",
            "opt_dict": {
              "help": "uuid of chassis"
            }
          }
        ]
      ]
    },

	"tasks": {
      "description": "get tasks detail from LXCA",
      "cmd_args": [
      [{
				"args": "-v,--view",
				"opt_dict": {
					"help": "view for interactive shell"
				}
			}
		],

        [
          {
            "args": "-j,--jobUID",
            "opt_dict": {
              "help": "task Id of task"
            }
          }
        ],
        [
          {
            "args": "-c,--children",
            "opt_dict": {
              "help": "include children details",
			  "default" : false
            }
          }
        ],
        [
          {
            "args": "-a,--action",
            "opt_dict": {
              "help": "action to perform",
			  "choices": ["cancel", "update", "delete"]
            }
          }
        ],
        [
          {
            "args": "-u,--updateList",
            "opt_dict": {
              "help": "List of dict of change, required with action update",
			  "type": "json.loads"
            }
          }
        ]
      ]
    },

  "manage": {
	"description": "manage device on LXCA",
    "add_help": true,
	"subcmd": [
       {
			"name": "manage_device",
            "help": "Manage discovered device",
			"subcmd_args": [
              [{
                            "args": "-v,--view",
                            "opt_dict": {
                                "help": "view for interactive shell"
                            }
                        }
              ],

              [{
						"args": "-i,--ip",
						"opt_dict": {
							"help": "ip of Device"
						}
					}
				],
				[{
						"args": "-u,--user",
						"opt_dict": {
							"help": "device user"
						}
					}
				],
				[{
						"args": "-p,--pw",
						"opt_dict": {
							"help": "device passw0rd"
						}
					}
				],
				[{
						"args": "-r,--rpw",
						"opt_dict": {
							"help": "device restore passw0rd"
						}
					}
				],
				[{
						"args": "-f,--force",
						"opt_dict": {
							"help": "Force manage"
						}
					}
				]
			]
		},

		{
				"name": "manage_job_status",
			    "help": "Get manage job status",
				"subcmd_args": [
                    [{
                                    "args": "-v,--view",
                                    "opt_dict": {
                                        "help": "view for interactive shell"
                                    }
                                }
                      ],

					[{
							"args": "-j,--job",
							"opt_dict": {
								"help": "ip of Device",
								"type": "int"
							}
						}
					]
				]
		}
		]
	}
}

