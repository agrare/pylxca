{
	"connect": {
		"description": "connect to LXCA",
		"cmd_args": [
			[{
					"args": "-l,--url",
					"opt_dict": {
						"help": "Url of lxca"
					}
				}
			],
			[{
					"args": "-u,--user",
					"opt_dict": {
						"help": "user of lxca"
					}
				}
			],
			[{
					"args": "-p,--pw",
					"opt_dict": {
						"help": "password of lxca"
					}
				}
			],
			[{
					"args": "--noverify",
					"opt_dict": {
						"help": "Verify certificate",
                        "const": true,
                        "nargs": "?",
                        "default": true
                    }
				}
			]
		]
	},

	"nodes":
    {
		"description": "get nodes from LXCA",
		"cmd_args":	[
		[{
				"args": "-v,--view",
				"opt_dict": {
					"help": "view for interactive shell"
				}
			}
		],

		[{
				"args": "-u,--uuid",
				"opt_dict": {
					"help": "uuid of device"
				}
			}
		],
		[{
				"args": "-c,--chassis",
				"opt_dict": {
					"help": "uuid of chassis"
				}
			}
		],
		[{
				"args": "-s,--status",
				"opt_dict": {
					"help": "list nodes with status",
					"choices": ["managed", "unmanaged"]
				}
			}
		]
	]},

      "chassis":
      {
		"description": "get chassis from LXCA",
		"cmd_args":[
		[{
				"args": "-v,--view",
				"opt_dict": {
					"help": "view for interactive shell"
				}
			}
		],

		[{
				"args": "-u,--uuid",
				"opt_dict": {
					"help": "uuid of device"
				}
			}
		],
		[{
				"args": "-s,--status",
				"opt_dict": {
					"help": "list nodes with status",
					"choices": ["managed", "unmanaged"]
				}
			}
		]
	]},

	"cmms": {
      "description": "get cmms from LXCA",
      "cmd_args": [
        [
          {
            "args": "-u,--uuid",
            "opt_dict": {
              "help": "uuid of device"
            }
          }
        ],
        [
          {
            "args": "-c,--chassis",
            "opt_dict": {
              "help": "uuid of chassis"
            }
          }
        ]
      ]
    }

}

